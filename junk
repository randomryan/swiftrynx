#!/bin/bash

# Define variables
rarFile="your_rar_file.rar"  # Replace with the actual name of your RAR file
password="Covid-19"
gitRepo="https://github.com/SwiftRynx/swiftrynx.git"
targetFolder="swiftrynx-master"

# Check if the RAR file exists
if [ ! -f "$rarFile" ]; then
    echo "Error: RAR file '$rarFile' not found."
    exit 1
fi

# Extract the RAR file with the password
unrar x -p$password "$rarFile" || {
    echo "Error: Failed to extract the RAR file with password."
    exit 1
}

# Check if the target folder already exists
if [ -d "$targetFolder" ]; then
    echo "Warning: Target folder '$targetFolder' already exists. Skipping cloning."
else
    # Clone the Git repository
    git clone "$gitRepo" "$targetFolder" || {
        echo "Error: Failed to clone the Git repository."
        exit 1
    }
fi

# Move the extracted files into the proper folder
mv * "$targetFolder" || {
    echo "Error: Failed to move files into the target folder."
    exit 1
}

echo "Configuration completed successfully."
